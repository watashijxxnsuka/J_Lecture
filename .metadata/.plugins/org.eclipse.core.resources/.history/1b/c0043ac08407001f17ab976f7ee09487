package chap07_class.circle;

public class Circle {
	
	public final double PI = 3.14;
	
	public int radius;
	
	
	public Circle() {
		
	}
	
	public Circle(int radius) {
		this.radius = radius;
		
	}
	
	public double circumference() {
		double circumference = (2 * PI * radius);
		return circumference;
	}
	
	public double area() {
		double area = (PI * radius * radius);
		return area;
	}
	
}
