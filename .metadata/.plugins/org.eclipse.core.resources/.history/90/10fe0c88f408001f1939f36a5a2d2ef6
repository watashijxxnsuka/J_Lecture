    public static void saveEmployee(String type) {
        System.out.println(type + " 직 사원 정보를 입력하세요.");
        System.out.print("사번을 입력하세요: ");
        int id = scanner.nextInt();
        scanner.nextLine(); // 버퍼 비우기
        System.out.print("이름을 입력하세요: ");
        String name = scanner.nextLine();
        // 추가로 필요한 정보 입력
        // 예시: 정규직은 연봉과 보너스 입력
        //       임시직은 급여와 근무년수 입력
        //       계약직은 급여와 근무일수 입력
        empArr[empCount++] = new Employee(id, name, type);
        System.out.println(type + " 직 사원 정보를 저장했습니다.");
    }
    
    public static void showEmployeeInfo() {
        if (empCount == 0) {
            System.out.println("저장된 사원 정보가 없습니다.");
            return;
        }
        System.out.println("********** 전체 사원 정보 **********");
        for (int i = 0; i < empCount; i++) {
            System.out.println(empArr[i]);
        }
    }
    
