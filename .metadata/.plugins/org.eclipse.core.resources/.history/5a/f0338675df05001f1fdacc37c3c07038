//			
//			int userNum = sc.nextInt();
//			
//			if(userNum ==0);
//			System.out.println("프로그램을 종료합니다.");
//			break;
//		}
//		int userNum = sc.nextInt();
//		for (int k = 2; k <=9; k++) {
//			System.out.println(k);
//			for (int l = 1; l <= 9; l++) {
//				sum = ( userNum * k);
//				System.out.println(sum);
			}
			
		}
		sc.close();
		
		}

	}


