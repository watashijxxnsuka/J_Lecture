package chap21_multithread.threads;

public class PrintNum {
	public void printNum(int Num) {
		// Thread t1, t2
		// t1 1 ~ num 까지 출력
		// t2 num + 1 ~ num * 2 까지 출력
		// t1, t2 순서대로 대기큐에 등록
		// join 메소드로 t2가 먼저 실행되도록
		
		Thread t1 = new Thread() {
			@Override
			public void run() {
				for(int i = 1; i <  ; i++)
					System.out.println(i);
			}
		};
		
		t1.start();
		
		try {
			t1.join();
		} catch(InterruptedException ie){
			
		}
	}
}
